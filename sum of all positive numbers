#include <iostream>
using namespace std;

class SumPositiveNumbers {
    int* arr;
    int size;
    int sum;

public:
    // Parameterized constructor to initialize array and size
    SumPositiveNumbers(int arr[], int n) {
        size = n;
        this->arr = new int[size];
        sum = 0;

        for (int i = 0; i < size; i++) {
            this->arr[i] = arr[i];
            if (arr[i] > 0) {
                sum += arr[i];  // Add only positive numbers
            }
        }
    }

    // Copy constructor
    SumPositiveNumbers(const SumPositiveNumbers& obj) {
        size = obj.size;
        arr = new int[size];
        sum = obj.sum;  // Copy the sum directly

        for (int i = 0; i < size; i++) {
            arr[i] = obj.arr[i];
        }
    }

    // Function to display the sum
    void displaySum() {
        cout << "The sum of all positive numbers is: " << sum << endl;
    }

    // Destructor to free the dynamically allocated memory
    ~SumPositiveNumbers() {
        delete[] arr;
    }
};

int main() {
    int n;

    cout << "Enter the number of elements in the array: ";
    cin >> n;

    int arr[n];
    cout << "Enter the elements of the array: ";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    // Creating the original object
    SumPositiveNumbers original(arr, n);

    // Creating a copy of the object using the copy constructor
    SumPositiveNumbers copy = original;

    // Displaying the sum from the copied object
    copy.displaySum();

    return 0;
}
